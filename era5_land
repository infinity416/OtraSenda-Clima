cdo settaxis,1998-07-31,00:00:00 -selday,1 era5_land_1998_08_tp_time.nc clas/era5_land_1998_07_tp_time_d31.nc
cdo settaxis,1998-08-31,00:00:00 -selday,1 era5_land_1998_09_tp_time.nc clas/era5_land_1998_08_tp_time_d31.nc

cdo settaxis,2002-06-30,00:00:00 -selday,1 era5_land_2002_07_tp_time.nc clas/era5_land_2002_06_tp_time_d30.nc
cdo settaxis,2002-07-31,00:00:00 -selday,1 era5_land_2002_08_tp_time.nc clas/era5_land_2002_07_tp_time_d31.nc
cdo settaxis,2002-08-31,00:00:00 -selday,1 era5_land_2002_09_tp_time.nc clas/era5_land_2002_08_tp_time_d31.nc



cdo mergetime era5_land_1997_06_tp_time_d*.nc months/era5_land_1997_06_tp_mod.nc
cdo mergetime era5_land_1997_07_tp_time_d*.nc months/era5_land_1997_07_tp_mod.nc
cdo mergetime era5_land_1997_08_tp_time_d*.nc months/era5_land_1997_08_tp_mod.nc

cdo mergetime era5_land_1998_06_tp_time_d*.nc months/era5_land_1998_06_tp_mod.nc
