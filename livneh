for neg in tmax.2001.nc
do
cdo selname,tmax -selmon,06 -sellonlatbox,-113,-81,12,30 ${neg:0:-3}.nc new/livneh.${neg:0:-3}.06.rec.nc
cdo selname,tmax -selmon,07 -sellonlatbox,-113,-81,12,30 ${neg:0:-3}.nc new/livneh.${neg:0:-3}.07.rec.nc
cdo selname,tmax -selmon,08 -sellonlatbox,-113,-81,12,30 ${neg:0:-3}.nc new/livneh.${neg:0:-3}.08.rec.nc
done

for neg in tmin.2001.nc
