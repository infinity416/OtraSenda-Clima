cdo selname,tmin -selmon,07 -sellonlatbox,-113,-81,12,30 ${neg:0:-3}.nc new/livneh.${neg:0:-3}.06.rec.nc
cdo selname,tmin -selmon,08 -sellonlatbox,-113,-81,12,30 ${neg:0:-3}.nc new/livneh.${neg:0:-3}.08.rec.nc
done

for neg in precip.2001.nc
